<UserControl x:Class="YuanliCore.Logger.LoggerUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YuanliCore.Logger"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500"
              x:Name="Logger">

    <Grid DataContext="{Binding ElementName=Logger}" >
        <GroupBox Grid.Row="2" FontSize="20" Header="Log資訊">
            <TextBox  Name="TextBoxLog"   VerticalScrollBarVisibility="Visible"   Text="{Binding MainLog}" MaxLines="30"    />
        </GroupBox>
    </Grid>
</UserControl>
